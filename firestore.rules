
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * CORE PHILOSOPHY
     * This ruleset implements a strict User-Ownership model designed for "Authorization Independence." 
     * Access control is determined entirely by the hierarchy of the data path (/users/{userId}), 
     * ensuring that users can only interact with their own profile, statistics, and subscription data.
     */

    // --- Helper Functions ---

    /** Checks if the request is from a signed-in user. */
    function isSignedIn() {
      return request.auth != null;
    }

    /** Checks if the provided userId matches the authenticated user's UID. */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /** Checks for ownership and ensures the document exists before modification. */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    // --- Rules ---

    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; 
      allow create: if isOwner(userId) && request.resource.data.uid == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.uid == resource.data.uid;
      allow delete: if isExistingOwner(userId);

      match /stats/{statsId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update, delete: if isExistingOwner(userId);
      }

      match /subscriptions/{subscriptionId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update: if isExistingOwner(userId);
        allow delete: if isExistingOwner(userId);
      }

      /**
       * @description Rules for the user's audit history.
       * @path /users/{userId}/audit_logs/{auditId}
       */
      match /audit_logs/{auditId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update, delete: if isExistingOwner(userId);
      }
    }

    // Default deny for any unmatched paths
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
