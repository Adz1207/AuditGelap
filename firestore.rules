
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    function isPremium(uid) {
      return get(/databases/$(database)/documents/users/$(uid)).data.role != 'free';
    }

    // --- Rules ---

    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; 
      allow create: if isOwner(userId) && request.resource.data.uid == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.uid == resource.data.uid;
      allow delete: if isExistingOwner(userId);

      match /stats/{statsId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update, delete: if isExistingOwner(userId);
      }

      match /subscriptions/{subscriptionId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update, delete: if isExistingOwner(userId);
      }

      match /audit_logs/{auditId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId) && 
                      (request.resource.data.type == 'standard' || isPremium(userId));
        allow update, delete: if isExistingOwner(userId);
      }

      match /active_commands/{commandId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update, delete: if isExistingOwner(userId);
      }
    }

    match /waitlist/{waitlistId} {
      // Allow anyone to join the waitlist
      allow create: if true;
      allow read, update, delete: if false;
    }

    // Default deny
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
