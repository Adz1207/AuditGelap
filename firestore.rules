
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---

    /** Checks if the request is from a signed-in user. */
    function isSignedIn() {
      return request.auth != null;
    }

    /** Checks if the provided userId matches the authenticated user's UID. */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /** Checks for ownership and ensures the document exists before modification. */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /** 
     * Helper to check premium status.
     * Fetches the user document to check the 'role' field.
     */
    function isPremium(uid) {
      return get(/databases/$(database)/documents/users/$(uid)).data.role != 'free';
    }

    // --- Rules ---

    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; 
      allow create: if isOwner(userId) && request.resource.data.uid == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.uid == resource.data.uid;
      allow delete: if isExistingOwner(userId);

      match /stats/{statsId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update, delete: if isExistingOwner(userId);
      }

      match /subscriptions/{subscriptionId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update, delete: if isExistingOwner(userId);
      }

      match /audit_logs/{auditId} {
        allow get, list: if isOwner(userId);
        
        /**
         * Access Control Logic for Audit Creation:
         * 1. Must be the owner of the user path.
         * 2. If creating a 'deep_audit', user must be premium (role != 'free').
         */
        allow create: if isOwner(userId) && 
                      (request.resource.data.type == 'standard' || isPremium(userId));
                      
        allow update, delete: if isExistingOwner(userId);
      }

      match /active_commands/{commandId} {
        allow get, list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update, delete: if isExistingOwner(userId);
      }
    }

    // Default deny
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
